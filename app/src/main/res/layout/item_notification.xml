            android:paddingTop="@dimen/_15sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:paddingBottom="@dimen/_15sdp">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/newnotification"
                style="@style/semiboldfont"
                android:layout_width="@dimen/_5sdp"
                android:layout_height="@dimen/_5sdp"
                android:background="@drawable/rectangle_border_fill"
                android:padding="@dimen/_3sdp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_8sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvtitle"
                style="@style/mediumfont"
                android:layout_width="0dp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_height="wrap_content"
                android:text="I Forgot my Password and don't have my phone right now to verfy user "
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintEnd_toStartOf="@id/ivdonwn"
                app:layout_constraintStart_toEndOf="@+id/newnotification"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivdonwn"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:src="@drawable/ic_down_arrow"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_5sdp"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/light_gre1"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/tvtitle" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvans"
                style="@style/regularfont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/longdes"
                android:textColor="@color/black_3"
                android:textSize="@dimen/_10sdp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/view1" />
        </androidx.constraintlayout.widget.ConstraintLayout>

