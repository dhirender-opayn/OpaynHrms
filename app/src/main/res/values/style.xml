<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

    </style>

    <style name="regularfont">
        <item name="android:includeFontPadding">false</item>

        <item name="fontFamily">@font/asap_regular</item>

    </style>

    <style name="SeekBarColor" parent="Widget.AppCompat.SeekBar">

    </style>

    <style name="mediumfont">
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">@font/asap_medium</item>
    </style>

    <style name="semiboldfont">
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">@font/asapsemibold</item>

    </style>

    <style name="boldfont">
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">@font/asapbold</item>

    </style>

    <style name="boldseguoifont">
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">@font/segoeuib</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="semiboldseguoifont">
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">@font/seguisb</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="logintitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_5sdp</item>
        <item name="fontFamily">@font/asap_semibold</item>
        <item name="android:textSize">@dimen/_20sdp</item>
    </style>

    <style name="hedertitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/asap_semibold</item>

        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="hedertitle_medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/asap_medium</item>

        <item name="android:textSize">@dimen/_11sdp</item>
    </style>

    <style name="subhedertitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/asapsemibold</item>

        <item name="android:textSize">@dimen/_11sdp</item>
    </style>

    <style name="edittextlogintitle_regular">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/asap_regular</item>
        <item name="android:singleLine">true</item>

        <item name="android:padding">@dimen/_12sdp</item>
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>


    <style name="edittextlogintitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/asap_medium</item>
        <item name="android:textColorHint">@color/dark_grey</item>
        <item name="android:textColor">@color/black_3</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:drawablePadding">@dimen/_5sdp</item>
    </style>

    <style name="edittextlogintitleparent" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/asap_medium</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="theme">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:layout_marginStart">@dimen/_20sdp</item>
        <item name="android:layout_marginEnd">@dimen/_20sdp</item>
        <item name="android:textColorHint">@color/light_gre1</item>
        <item name="hintTextColor">@color/pinky_red</item>
        <item name="android:textColor">@color/black_3</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>


    <style name="customAlertheme" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="NegativeButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="mainbutton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/asapsemibold</item>
        <item name="singleLine">true</item>

    </style>


    <style name="transparent_dialog_borderless" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    //Filter

    <style name="background_color">
        <item name="android:background">#F7F7FF</item>
    </style>


    <style name="filter_sub_head">
        <item name="fontFamily">@font/asap_semibold</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">#A8A7AC</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="filter_head">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_24sdp</item>
        <item name="android:textColor">#4A4A4A</item>
        <item name="fontFamily">@font/asap_bold</item>
    </style>


    <style name="card_view">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">true</item>


    </style>


    <style name="button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="cornerRadius">@dimen/_5sdp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:layout_marginStart">@dimen/_20sdp</item>
        <item name="android:layout_marginEnd">@dimen/_20sdp</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="fontFamily">@font/asap_bold</item>
        <item name="android:backgroundTint">@color/pinky_red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button_style2">
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">@dimen/_15sdp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="fontFamily">@font/asap_semibold</item>
    </style>

    <style name="title">

    </style>


</resources>